        <!-- Font Awesome CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
                crossorigin="anonymous"> </script>
        <script src="{{ url_for('static', filename='js/script.js') }}" type="text/javascript"></script>

        {% block headercontent %} {% endblock %}
    </head>
    <body class="badge-light" style="padding-top: 70px; padding-bottom: 70px;">
        <!-- Responsive navbar-->
        <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" style="box-shadow: 0px 5px 5px -5px gray;">
          <a class="navbar-brand" href="{{ url_for('home.index')}}"><strong>AlCa</strong>Val</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="/tickets">Tickets<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/relvals">Relvals</a>
              </li>
            </ul>
            <ul class="navbar-nav navbar-right">
              {% block nav_buttons %}
                <li class="nav-item active"><a class="nav-link"><font face="Courier"><small>Logged in as</small> {{user_name}}&nbsp;</font></a></li>
              {% endblock %}
            </ul>
          </div>
        </nav>
        </div>
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible " role="alert">
                        <span>{{ message }}</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}

        {% block content %}
        {% endblock %}
    </body>                                                                     
</html>